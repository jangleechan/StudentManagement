@using StudentManagement.ViewModels
@model StudentEditViewModel
@inject IStudentRepository _studentRepository

@{
    ViewBag.Title = "编辑学生信息";
    var photoPath = "~/images/"  +  (Model.ExistingPhotoPath ?? "noimage.png");
}

<form enctype="multipart/form-data" asp-controller="home" asp-action="create" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="请输入名字" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row mt-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="请输入邮箱" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

    </div>
    <div class="form-group row mt-3">
        <label asp-for="ClassName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ClassName" class="form-select" asp-items="Html.GetEnumSelectList<ClassNameEnum>()">
                <option value="">请选择</option>
                @*<span asp-validation-for="ClassName" class="text-danger"></span>*@
            </select>
        </div>
    </div>

    <div class="form-group row mt-3">
        <label asp-for="Photos" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photos" multiple class="form-control custom-file-input">


            </div>

        </div>

    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img class="imagesThumbnail" src="@photoPath" asp-append-version="true" />
    </div>

    <div class="form-group row mt-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">更新</button>
            <button class="btn btn-primary" asp-action="index" asp-controller="home">取消</button>
        </div>
    </div>





